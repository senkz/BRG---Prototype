package controls;

import connections.*;

public class Register 
{
	static DAO sourceConn;
	static DAO targetConn;
	
	private Register() {}

	public static void initializeTarget() 
	{
		sourceConn = (DAO) new SourceDatabaseJDBC_Oracle();		
	}
	
	public static void initializeSource() 
	{
		sourceConn = (DAO) new SourceDatabaseJDBC_Oracle();		
	}
	
	public static DAO getSourceConnection() 
	{
		if (sourceConn == null) 
		{
			initialize();
			return sourceConn;
		} 
		else 
		{
			return sourceConn;
		}
	}
	
	public static DAO getTargetConnection() 
	{
		if (targetConn == null) 
		{
			initializeTarget();
			return targetConn;
		} 
		else 
		{
			return targetConn;
		}
	}
}